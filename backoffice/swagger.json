                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/user/password": {
            "put": {
                "tags": ["User"],
                "summary": "Update user password",
                "consumes": ["multipart/form-data"],
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "currentPassword",
                        "in": "formData",
                        "type": "string",
                        "format": "password",
                        "required": true
                    },
                    {
                        "name": "password",
                        "in": "formData",
                        "type": "string",
                        "format": "password",
                        "required": true
                    },
                    {
                        "name": "confirmPassword",
                        "in": "formData",
                        "type": "string",
                        "format": "password",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "$ref": "#/definitions/UserResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "i18n": {
                                    "type": "string",
                                    "example": "user.invalid.credentials"
                                },
                                "errors": {
                                    "type": "object",
                                    "example": "{...}"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiUnauthorizedResponse"
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/hike": {
            "get": {
                "tags": ["Hike"],
                "summary": "Get hikes",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Select the number of hikes to return",
                        "required": false,
                        "type": "integer",
                        "default": 10
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Select the page of hikes to return",
                        "required": false,
                        "type": "integer",
                        "default": 0
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/PaginateResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "items": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "format": "number"
                                                    },
                                                    "osmId": {
                                                        "type": "integer",
                                                        "format": "number"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    },
                                                    "firstNodeLat": {
                                                        "type": "string"
                                                    },
                                                    "firstNodeLon": {
                                                        "type": "string"
                                                    },
                                                    "lastNodeLat": {
                                                        "type": "string"
                                                    },
                                                    "lastNodeLon": {
                                                        "type": "string"
                                                    },
                                                    "difficulty": {
                                                        "type": "string"
                                                    },
                                                    "hikingTime": {
                                                        "type": "string"
                                                    },
                                                    "imgName": {
                                                        "type": "string"
                                                    },
                                                    "createdAt": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    },
                                                    "updatedAt": {
                                                        "type": "string",
                                                        "format": "date-time"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiUnauthorizedResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "i18n": {
                                    "type": "string",
                                    "example": "pagination.limit.invalid"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/hike/favorites": {
            "get": {
                "tags": ["Hike"],
                "summary": "Get user favorite hikes",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Select the number of hikes to return",
                        "required": false,
                        "type": "integer",
                        "default": 10
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Select the page of hikes to return",
                        "required": false,
                        "type": "integer",
                        "default": 0
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "allOf": [
                                {
                                    "$ref": "#/definitions/PaginateResponse"
                                },
                                {
                                    "type": "object",
                                    "properties": {
                                        "items": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "format": "number"
                                                    },
                                                    "osmId": {
                                                        "type": "integer",
                                                        "format": "number"
                                                    },
                                                    "name": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "i18n": {
                                    "type": "string",
                                    "example": "pagination.limit.invalid"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiUnauthorizedResponse"
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/hike/{id}/favorite": {
            "post": {
                "tags": ["Hike"],
                "summary": "Add hike to favorite",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.favorite.added"
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiUnauthorizedResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.favorite.already_exists"
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.not_found"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": ["Hike"],
                "summary": "Delete hike from favorite",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.favorite.deleted"
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/ApiUnauthorizedResponse"
                        }
                    },
                    "400": {
                        "description": "Bad request",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.favorite.does_not_exist"
                            }
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.not_found"
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        },
        "/api/hike/{id}/geometry": {
            "get": {
                "tags": ["Hike"],
                "summary": "Get hike geometry",
                "produces": ["application/json"],
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "type": "integer"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "object",
                                "properties": {
                                    "lat": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 43.6974508
                                    },
                                    "lon": {
                                        "type": "number",
                                        "format": "float",
                                        "example": 6.0225858
                                    }
                                }
                            },
                            "example": [
                                {
                                    "lat": 43.6974508,
                                    "lon": 6.0225858
                                },
                                {
                                    "lat": 43.6975254,
                                    "lon": 6.0225832
                                }
                            ]
                        }
                    },
                    "404": {
                        "description": "Not found",
                        "schema": {
                            "type": "object",
                            "example": {
                                "i18n": "hike.not_found"
                            }
                        }
                    }
                }
            }
        }
    },
    "securityDefinitions": {
        "bearerAuth": {
            "type": "apiKey",
            "scheme": "bearer",
            "in": "header",
            "bearerFormat": "JWT",
            "name": "Authorization"
        }
    },
    "definitions": {
        "ApiUnauthorizedResponse": {
            "type": "object",
            "properties": {
                "i18n": {
                    "type": "string",
                    "example": "security.unauthorized"
                }
            }
        },
        "UserResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "number"
                },
                "firstname": {
                    "type": "string"
                },
                "lastname": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "lastLogin": {
                    "type": "string",
                    "format": "date-time"
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time"
                },
                "updatedAt": {
                    "type": "string",
                    "format": "date-time"
                }
            }
        },
        "PaginateResponse": {
            "type": "object",
            "properties": {
                "currentPage": {
                    "type": "integer",
                    "format": "number"
                },
                "nextPage": {
                    "type": "integer",
                    "format": "number",
                    "nullable": true
                },
                "previousPage": {
                    "type": "integer",
                    "format": "number",
                    "nullable": true
                },
                "totalPages": {
                    "type": "integer",
                    "format": "number"
                },
                "totalItems": {
                    "type": "integer",
                    "format": "number"
                }
            }
        }
    }
}